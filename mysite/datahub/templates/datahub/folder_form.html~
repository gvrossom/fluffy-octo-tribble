{% extends "base.html" %}
{% load crispy_forms_tags %}

{% block title %}
  {% if create %}Create Folder{% else %}Edit Folder{% endif %} bookmark
{% endblock %}

{% block heading %}
  <h2>
    {% if create %}
      Create folder
    {% else %}
      Edit folder
    {% endif %}
  </h2>
{% endblock %}

{% block content %}
  {% if create %}
    {% url "datahub:folder_create" as action_url %}
  {% else %}
    {% url "datahub:folder_edit" pk=form.instance.pk as action_url %}
  {% endif %}
  <form action="{{ action_url }}" method="post" accept-charset="utf-8">
    {{ form|crispy }}
    {% csrf_token %}
    <p><input type="submit" class="btn btn-default" value="Save"></p>
  </form>
{% endblock %}
